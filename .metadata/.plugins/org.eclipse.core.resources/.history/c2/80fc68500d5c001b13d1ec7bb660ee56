package Forloop;

public class Patrn4 
{
	public static void main(String[] args) 
	{
		int str=1;
		int spc=3;
		for(int i=1;i<=4;i++)
		{
			for(int k=1;k<=spc;k++)
			{
				System.out.print(' ');
			}
			for(int j=1;j<=str;j++)
			{
				System.out.print(i);
			}
			
			System.out.println(" ");
			str++;
			spc--;
		}
	}
}
