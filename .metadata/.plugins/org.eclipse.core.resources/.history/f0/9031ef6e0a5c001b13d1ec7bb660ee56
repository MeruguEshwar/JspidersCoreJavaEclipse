package Forloop;

public class Patrn3 
{
	public static void main(String[] args) 
	{
		int str=1;
		int spc=4;
		for(int i=1;i<=5;i++)
		{
			for(int j=1;j<=spc;j++)
			{
				System.out.print(' ');
			}
			for(int x=1;x<=str;x++)
			{
				System.out.print('*');
			}
		System.out.println(" ");
		spc--;
		str+=2;
		}
	
	}
}
